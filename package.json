{
  "name": "butterfly-dodge-backend",
  "version": "2.0.0",
  "description": "Secure backend server for Butterfly Dodge game leaderboard",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "echo 'No build step required'",
    "security-audit": "npm audit",
    "security-fix": "npm audit --fix",
    "test-server": "curl -s http://localhost:3000/health",
    "test-email": "curl -X POST http://localhost:3000/api/leaderboard -H 'Content-Type: application/json' -d '{\"name\":\"TestPlayer\",\"level\":10}'",
    "backup": "cp server.js server.js.backup.$(date +%Y%m%d_%H%M%S)"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "keywords": [
    "game",
    "leaderboard",
    "security",
    "express"
  ],
  "author": "Eric Gates",
  "license": "MIT"
}
